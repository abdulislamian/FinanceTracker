@model FinanceTracker.Models.ExpenseCategory

<form method="post" asp-action="Update">
    <div class="border p-3">
        <input asp-for="Id" hidden />
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update ExpenseType</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="CategoryType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="CategoryType" class="form-control" />
                        <span asp-validation-for="CategoryType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6  row mt-3 text-center">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_validationscriptspartial" />
    }
}