@model IEnumerable<FinanceTracker.Models.Items>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6" style="text-align:right;">
            <a asp-controller="Items" asp-action="Create" class="btn btn-primary">Create New Item</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered tabletable-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lendor</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var items in Model )
                {
                     <tr>
                        <td width="30%">@items.ID</td>
                        <td width="30%">@items.ItemName</td>
                        <td width="30%">@items.Borrower</td>
                        <td width="30%">@items.Lendor</td>
                     </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }
</div>